<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="BasicHttpBinding_IChatService" />
                <binding name="BasicHttpsBinding_IChatService">
                    <security mode="Transport" />
                </binding>
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://avanschatdb.azurewebsites.net/ChatService.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IChatService"
                contract="ChatService.IChatService" name="BasicHttpBinding_IChatService" />
            <endpoint address="https://avanschatdb.azurewebsites.net/ChatService.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpsBinding_IChatService"
                contract="ChatService.IChatService" name="BasicHttpsBinding_IChatService" />
        </client>
        <behaviors>
            <serviceBehaviors>
                <behavior name="">
                    <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
                    <serviceDebug includeExceptionDetailInFaults="false" />
                </behavior>
            </serviceBehaviors>
        </behaviors>
        <services>
            <service name="ChatConsole.ChatService">
                <endpoint address="" binding="basicHttpBinding" contract="ChatConsole.IChatService">
                    <identity>
                        <dns value="localhost" />
                    </identity>
                </endpoint>
                <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:8733/Design_Time_Addresses/ChatConsole/ChatService/" />
                    </baseAddresses>
                </host>
            </service>
        </services>
    </system.serviceModel>
</configuration>